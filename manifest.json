{
  "manifest_version": 3,
  "name": "SaneTube",
  "version": "1.0",
  "description": "An extension that helps you watch YouTube while maintaining your sanity (success not guaranteed)",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://youtube.com/",
        "https://youtube.com/*",
        "https://www.youtube.com/",
        "https://www.youtube.com/*"
      ]
    }
  ]
}